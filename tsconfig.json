{
  "compilerOptions": {
    "target": "es2020",                // Versão do JavaScript para compilar
    "module": "es2020",                // Usa módulos ES
    "lib": ["dom", "es2020"],          // Suporte a APIs do DOM e ES2020
    "strict": true,                    // Ativa verificações rigorosas do TypeScript
    "esModuleInterop": true,           // Permite interoperabilidade com CommonJS
    "skipLibCheck": true,              // Ignora checagem de bibliotecas
    "moduleResolution": "node",        // Resolve módulos como no Node.js
    "sourceMap": false                  // Gera source maps para depuração
  },
  "include": ["src/**/*.ts"],          // Inclui todos os arquivos TypeScript em src/
  "exclude": ["node_modules"]          // Exclui node_modules
}
