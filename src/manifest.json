{
  "manifest_version": 3,
  "name": "Utilitários LMS",
  "version": "0.0.1",
  "description": "Adiciona utilitários para o LMS.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["https://lms.ada.tech/teacher/lectures*"],
      "js": ["sorteador.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png"
  }
}
